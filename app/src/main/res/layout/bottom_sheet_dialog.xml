<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/blue_shade_1"
    android:id="@+id/idRLBSheet"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVCourseName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Nome do Curso"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/idTVCourseName"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/idIVCourse" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descricao"
        android:id="@+id/idTVDescription"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/idIVCourse"
        android:layout_below="@id/idTVCourseName"
        android:padding="3dp"
        android:layout_margin="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adequado para"
        android:id="@+id/idTVSuitedFor"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/idIVCourse"
        android:layout_below="@id/idTVPrice"
        android:padding="3dp"
        android:layout_margin="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preco"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/idTVPrice"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/idIVCourse"
        android:layout_below="@id/idTVDescription"
        android:padding="3dp"
        android:layout_margin="4dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2"
        android:layout_below="@id/idIVCourse">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Editar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Detalhes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnViewDetails" />

    </LinearLayout>


</RelativeLayout>